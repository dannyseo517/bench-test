{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "test-utils": ["../utils/test-utils"]
    },
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
